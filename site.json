  "titlePrefix": "CS4218",
  "style": {
    "codeTheme": "light",
    "codeLineNumbers": true
  },
  "timeZone": "Asia/Singapore",
  "disableHtmlBeautify": true,
  "ignore": [
    "_markbind/layouts/*",
    "_markbind/logs/*",
    "_site/*",
    "site.json",
    "*.md",
    "*.njk",
    ".git/*",
    "node_modules/*",
    "README.md",
    ".git/*",
    ".gitignore"
  ],
  "pagesExclude": ["node_modules/*"],
  "pages": [
    {
      "src": "index.md",
      "title": "CS4218"
    },
    {
      "glob": ["**/index.md", "**/*.md"]
    }
  ],
  "intrasiteLinkValidation": {
    "enabled": false
  },
  "headingIndexingLevel": 5,
  "deploy": {
  "message": "Site Update.",
